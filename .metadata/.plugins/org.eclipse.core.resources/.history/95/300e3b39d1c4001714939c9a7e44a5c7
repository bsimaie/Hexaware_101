package demos;

public class StringSearch {

	public static void main(String[] args) {
		locateLetter("Sample phrase", "a");

	}
	
	private static void locateLetter(String phrase, String letter) {
		int lengthOfString = phrase.length();
		
		for (int i = 0; i < lengthOfString; i++) {
			String subletter = phrase.substring(i, i+1);
			// System.out.print(subletter);
			// System.out.println("DOES " + subletter + " = " + letter + "?");
			if (subletter.equals(letter)) {
				System.out.println("MATCH AT POSITION: " + i);
			}
		}
	}

}
