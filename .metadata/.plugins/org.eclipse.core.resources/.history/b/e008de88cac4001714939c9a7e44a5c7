package demos;

public class CafeApp {

	public static void main(String[] args) {
		String phoneNumber = "6458932743";
		
		// Call a function to format the phone number
		formatPhoneNum(phoneNumber);
	}
	
	private static String formatPhoneNum(String phoneNumber) {
		System.out.println(phoneNumber);
		
		// First 3 digits (area code)
		String formattedNumber = phoneNumber.substring(0,3);
		
		// Add a -
		formattedNumber = formattedNumber.concat("-");
		
		// Find middle 3 digits
		formattedNumber = formattedNumber.concat(phoneNumber.substring(3,6));
		formattedNumber = formattedNumber.concat("-");
		
		// Find last 4 digits
		formattedNumber = formattedNumber.concat(phoneNumber.substring(6,phoneNumber.length()));
		
		
		System.out.println(formattedNumber);
		return null;
	}

}
