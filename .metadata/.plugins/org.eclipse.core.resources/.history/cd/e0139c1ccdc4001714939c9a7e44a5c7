package demos;

public class Loops {

	public static void main(String[] args) {
		int n = 5;
		int sum = sumNumbers(n);
		System.out.println("Sum of numbers 1 to " + n + " is " + sum);
	}
	
	private static void printNumbers(int index) {
		int i = 1;
		do {
			System.out.println(i);
			i = i+1;
		} while (i <= index);
	}
	
	private static int sumNumbers(int index) {
		int i = 1;
		int sum = 0;
		do {
			System.out.println(i);
			i++;
			sum = sum + i;
		} while (i <= index);
		return sum;
	}

}
